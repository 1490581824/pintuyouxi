<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <com.mingbaipintu.customLayout.TitleLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.mingbaipintu.customLayout.TitleLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mingbaipintu.customLayout.GameView
            android:id="@+id/gameView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.mingbaipintu.customLayout.GameView>
        <com.mingbaipintu.customLayout.GameWinView
            android:id="@+id/gameWinView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.mingbaipintu.customLayout.GameWinView>

        <com.mingbaipintu.customLayout.SettingList
            android:id="@+id/settingListView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/darkgreen"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

        </com.mingbaipintu.customLayout.SettingList>
    </RelativeLayout>
</LinearLayout>
